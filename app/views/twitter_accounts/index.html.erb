<div class="d-flex align-items-center justify-content-between mb-5">
  <h1>Twitter Accounts</h1>
  <%= button_to "Connect your Twitter Account", "/auth/twitter", method: :post, class: "btn btn-primary btn-lg px-4 gap-3" %>
</div>


<% @twitter_accounts.each do |twitter_account| %>
  <div class="d-flex align-items-center justify-content-between pt-2 border-top pb-2 border-bottom mb-3">
    <div>
      <%= image_tag twitter_account.image, class: "rounded-circle me-3" %>
      <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank %>
    </div>

    <div>
      <%= button_to "Disconnect", twitter_account, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>